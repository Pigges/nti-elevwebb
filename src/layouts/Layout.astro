---
import Header from '../components/Header.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="NTI Karlstad Elevwebb." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header/>
		<main><slot /></main>
	</body>
</html>
<style is:global>
	@import 'bulma/css/bulma.css';

	:root {
		--gradient: linear-gradient(90deg, rgba(75,0,130,1) 0%, rgba(177,6,140,1) 100%);
	}
	
	* {
		margin: 0;
	}

	html {
		font-family: system-ui, sans-serif;
		background: var(--gradient);
	}

	body {
	}
</style>
